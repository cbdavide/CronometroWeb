@font-face {
  font-family: 'icomoon';
  src:url('../fonts/icomoon.eot?-v8jqup');
  src:url('../fonts/icomoon.eot?#iefix-v8jqup') format('embedded-opentype'),
  url('../fonts/icomoon.woff?-v8jqup') format('woff'),
  url('../fonts/icomoon.ttf?-v8jqup') format('truetype'),
  url('../fonts/icomoon.svg?-v8jqup#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  font-family: 'icomoon';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-forward:before {
  content: "\e601";
}

.icon-backward:before {
  content: "\e602";
}

.icon-pause:before {
  content: "\e603";
}

.icon-play:before {
  content: "\e604";
}

.icon-plus:before {
  content: "\ea0a";
}
body
  background #BFBFBF
  font-family sans
  font-size 16px
  margin 0
header
  background #22313F
  color white
  overflow hidden
  position relative
  top 0
  h1
    margin-left 0.5em
  .add
    cursor pointer
    margin 1em 0.5em 0.5em 0em
    padding 1em
    position absolute
    right 0
    top 0
    &:hover
      color #1E824C
.botones
  background #049372
  position absolute
.boton
  cursor pointer
  padding 1.1em 0.3em
  top 0
  position absolute
  background #049372
  &.icon-backward
    left 0
    // padding-left 0.3em
  &.icon-pause
    display none
  &.icon-forward
    // padding-right 0.3em
    right 0
  &:hover
    background #1E824C

.disabled
  background #6C7A89
  border 0px solid transparent
  &:hover
    background #6C7A89
.proceso
  color white
  // max-width 400px
  position relative
.tiempo
  background #2C3E50
  border 1px solid #22313F
  font-size 2em
  text-align center
  padding 1em 0em
  width 100%
.wrap
  width 100%
